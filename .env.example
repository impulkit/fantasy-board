# Supabase (server-side — service role, full access)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase (client-side — anon key, RLS-restricted)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# CricketData API (https://cricapi.com)
CRICKETDATA_API_KEY=your-cricket-api-key
CRICKETDATA_SERIES_ID=your-series-id

# Admin key for sync endpoint
ADMIN_KEY=your-secret-admin-key

# Vercel Cron Secret (set this in Vercel dashboard → Settings → Environment Variables)
CRON_SECRET=your-cron-secret
